<?xml version='1.0' encoding='utf-8'?>
<widget id="com.project.virtualguide" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VirtualGuide</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <feature name="Accelerometer">
        <param name="firefoxos-package" value="Accelerometer" />
    </feature>
    <permission description="Required for accessing user location." name="geolocation" />
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
</widget>
